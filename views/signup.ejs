<%- include('./partials/header') %>

<!-- Main Content (Signup Form) -->
<main class="flex-grow flex items-center justify-center py-8">
  <div class="w-full max-w-md p-8 space-y-6 bg-white shadow-lg rounded-lg">
    <h2 class="text-3xl font-bold text-center text-primary-dark">Sign Up</h2>

    <form class="space-y-4">
      <!-- Username Input -->
      <div>
        <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
        <input id="username" name="username" type="text" required class="w-full p-2 mt-1 border border-gray-300 rounded-md focus:ring-primary-light focus:border-primary-light">
      </div>

      <!-- Email Input -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
        <input id="email" name="email" type="email" required class="w-full p-2 mt-1 border border-gray-300 rounded-md focus:ring-primary-light focus:border-primary-light">
      </div>

      <!-- Password Input -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <input id="password" name="password" type="password" required class="w-full p-2 mt-1 border border-gray-300 rounded-md focus:ring-primary-light focus:border-primary-light">
      </div>

      <!-- Confirm Password Input -->
      <div>
        <label for="confirm-password" class="block text-sm font-medium text-gray-700">Confirm Password</label>
        <input id="confirm-password" name="confirm-password" type="password" required class="w-full p-2 mt-1 border border-gray-300 rounded-md focus:ring-primary-light focus:border-primary-light">
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit" class="w-full py-2 text-white bg-button rounded-md hover:bg-blue-900 focus:outline-none">Sign Up</button>
      </div>

      <!-- Additional Links -->
      <div class="flex items-center justify-between">
        <a href="/login" class="text-sm text-primary-light hover:underline">Already have an account? Sign in</a>
      </div>
    </form>
  </div>
</main>

<%- include("./partials/footer") %>
